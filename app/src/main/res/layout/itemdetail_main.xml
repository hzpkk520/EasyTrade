            <TextView
                android:id="@+id/condition"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sellerImage"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Condition :" />

            <TextView
                android:id="@+id/conditionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gently Used"
                android:layout_alignTop="@+id/condition"
                android:layout_toEndOf="@+id/condition" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category :"
                android:layout_below="@+id/condition"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/categoryDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Furniture "
                android:layout_alignTop="@+id/category"
                android:layout_toEndOf="@+id/category"
                android:layout_alignLeft="@+id/conditionDescription"
                />

            <View
                android:id="@+id/blankArea"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_below="@id/description"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="30dp" />

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#80000000">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="$119.00"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buyButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_button"
            android:onClick="openConfirmationActivity"
            android:text="Contact"
            android:textColor="#FFF" />
    </RelativeLayout>

