<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
android:padding="10dp"
    android:id="@+id/ImageView1"
    android:layout_width="180dp "
    android:layout_height="150dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <ImageView
        android:padding="10dp"
        android:id="@+id/ImageView2"
        android:layout_width="180dp "
        android:layout_height="150dp"
        android:layout_below="@+id/ImageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="right|top" />

    <ImageView
        android:padding="10dp"
        android:id="@+id/ImageView3"
        android:layout_width="180dp "
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="left|center_vertical" />




    <ImageView
        android:padding="10dp"
        android:id="@+id/ImageView4"
        android:layout_width="180dp "
        android:layout_height="150dp"
        android:layout_below="@+id/ImageView3"
        android:layout_alignLeft="@+id/ImageView3"
        android:layout_alignStart="@+id/ImageView3"
        android:layout_gravity="right|center_vertical" />

    <ImageView

        android:src="@drawable/remove"
        android:onClick="delete_one"
        android:layout_marginLeft="150dp"
        android:id="@+id/delete_one"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left|top" />



    <ImageView
        android:src="@drawable/remove"
        android:onClick="delete_two"
        android:layout_marginLeft="350dp"
        android:id="@+id/delete_two"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|top" />

    <ImageView

        android:src="@drawable/remove"
        android:onClick="delete_three"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/delete_three"
        android:layout_width="30dp"
        android:layout_height="30dp"
        />

    <ImageView
        android:src="@drawable/remove"

        android:onClick="delete_four"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="330dp"
        android:id="@+id/delete_four"
        android:layout_width="30dp"
        android:layout_height="30dp"
        />

    <Button
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_bg"
       android:onClick="select_photo_from_file"
        android:text="Select Photo"
        android:textColor="#FFFFFF"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="left|bottom" />

    <Button
        android:onClick="confirm"
        android:background="@drawable/button_bg"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="right|bottom" />

    <TextView
        android:id="@+id/photo4"
        android:textSize="25dp"
        android:text="Please Select Your Photos"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_horizontal|bottom" />
    <TextView
        android:id="@+id/photo3"
        android:textSize="25dp"
        android:text="You Can Upload Three More Photos If you Wish"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_horizontal|bottom" />
    <TextView
        android:id="@+id/photo2"
        android:textSize="25dp"
        android:text="You Can Still Upload Two More Photos If you Wish"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
        android:id="@+id/photo1"
        android:textSize="25dp"
        android:text="You Have One More Slot Left To Use"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
        android:id="@+id/photo0"
        android:textSize="25dp"
        android:text="You Have Used All Four Photo Slots"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_horizontal|bottom" />

    <View

 android:id="@+id/horizon"
        android:layout_marginTop="180dp"
        android:background="@color/theme500"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/fill_info"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:layout_gravity="center_horizontal|top" />
    <View

        android:id="@+id/horizon1"
        android:layout_marginTop="355dp"
        android:background="@color/theme500"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/fill_info"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:layout_gravity="center_horizontal|top" />

    <View

        android:id="@+id/vertical"
        android:layout_marginTop="0dp"
        android:background="@color/theme500"
        android:layout_height="355dp"
        android:layout_width="2dp"
        android:layout_above="@+id/fill_info"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:layout_gravity="center_horizontal|top" />


</FrameLayout>